<Window x:Class="Wpf_Zaharov_PR5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Zaharov_PR5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="400*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>
        <Label Content="MainWindow" Grid.RowSpan="2" Grid.Column="0"></Label>
        <Frame Grid.Column="1" Grid.ColumnSpan="2" Content="Page1" BorderBrush="Green" BorderThickness="1" ></Frame>
        <Frame Grid.Column="1" Grid.Row="1" Content="Page2" BorderBrush="Green" BorderThickness="1" ></Frame>
        <Frame Grid.Column="2" Grid.Row="2" Content="Page3" Grid.RowSpan="2" BorderBrush="Green" BorderThickness="1"></Frame>
    </Grid>
</Window>

